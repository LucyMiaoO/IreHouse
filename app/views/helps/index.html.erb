<div class="jumbotron">
  <h1>Leave a message and get help.</h1>
  <h2>If you have one house, you can help.</h2>
</div>
  <div class="row">
    <%= form_tag search_helps_path, class: "form-group", :method => :get do %>
      <div class="col-md-offset-3 col-md-5">
        <br> <%= text_field_tag :query, params[:query] , class: "form-control" , :placeholder => 'Put the city you want to search here...'%> 
      </div>
      <div class="col-md-1">
        <br> <%= submit_tag "Search!" , class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>    
<br>     

<% if @helps.blank? %>
      <h2>No messages yet. Be the first to write one!</h2>
  <% else %>

    <% @helps.each do |help| %>
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title"><%= help.user.name %></h3>
              <h3 class="button-right">
                  <%= link_to help, class: "btn btn-circle btn-success btn-xs", title: "View" do %>
                    <i class="glyphicon glyphicon-eye-open"></i>
                  <% end %>
              </h3>
        </div>
        <div class="panel-body">
            <h4>City: <%= help.city %> | <%= help.title %></h4>
        </div>
      </div>  
    <% end %>
<% end %>

<br>


