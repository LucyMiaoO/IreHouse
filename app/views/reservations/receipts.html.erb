<div class = "center">
  <h1>Your Receipt History</h1>
</div>

<br>
<br>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">City</th>
    <th class="center">Address</th>
    <th class="center">Deposit</th>
    <th class="center">Date rented</th>
    <th class="center">Tenant</th>
    <th class="center">Age</th>
    <th class="center">Nationality</th>
    <th class="center">Message</th>
  </tr>

  <% @reservations.each do |reservation| %>
    <tr>
      <td class="center">
        <%= image_tag reservation.listing.image.url(:thumb) %>
      </td>
      <td class="center"><%= reservation.listing.city %></td>
      <td class="center"><%= reservation.listing.address %></td>
      <td class="center"> â‚¬ <%= reservation.listing.deposit %></td>
      <td class="center"><%= reservation.created_at.strftime("%B %-d, %Y") %></td>    
      <td class="center"><%= reservation.student.name %></td>
      <td class="center"><%= reservation.age %></td>
      <td class="center"><%= reservation.nationality %></td>
      <td class="center"><%= reservation.message %></td>
    </tr>
  <% end %>
</table>