<%= form_for([@listing, @reservation]) do |f| %>
  <% if @reservation.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

      <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :nationality %><br>
    <%= f.text_field :nationality, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :age %><br>
    <%= f.number_field :age, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :message %><br>
    <%= f.text_area :message, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Complete Reservation", class: "btn btn-success" %>
  </div>
<% end %>
