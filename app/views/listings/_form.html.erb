  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>
      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= form_for @listing, :html => { :multipart => true } do |f| %>
        <div class="form-group">
          <%= f.label :city %><br>
          <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :group %><br>
          <%= f.collection_select :group_id, Group.all, :id, :name, { prompt: "Select City"}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :deposit %><br>
          <%= f.text_field :deposit, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :rental %><br>
          <%= f.text_field :rental, class: "form-control" , :placeholder => 'per month'%>
        </div>
        <div class="form-group">
          <%= f.label :address %><br>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit the House" , class: "btn btn-primary", data: { no_turbolink: true} %>
        </div>
    <% end %>

