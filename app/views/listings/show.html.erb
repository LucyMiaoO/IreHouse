<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @listing.city %></h3>
    <p>Deposit: <%= @listing.deposit%> â‚¬ </p>
    <p>Address: <%= @listing.address%></p>
    <iframe
        width="500"
        height="300"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBk0n3HgHsD1_klWfbntFpqcnelHV-9a64&q=<%= @listing.address.parameterize %>&zoom=14">
    </iframe> 
    <p>Description: <br> <%= @listing.description %></p>
    <br>
      <% if current_user != @listing.user %>
      <%= link_to " Reserve ", new_listing_reservation_path(@listing), class: "btn btn-primary" , data: { no_turbolink: true } %>
      <% end %>
  </div>
</div>

<% if current_user == @listing.user %>
<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>