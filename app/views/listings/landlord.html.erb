<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">City</th>
    <th class="center">Description</th>
    <th class="center">Deposit</th>
    <th class="center">Action</th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td class="center">
        <%= image_tag listing.image.url(:thumb) %>
      </td>
      <td class="center"><%= listing.city %></td>
      <td class="center"><%= listing.description %></td>
      <td class="center"><%= listing.deposit %> â‚¬ </td>
      <td class="center">
        <div class="btn-group">
          <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", listing, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_listing_path(listing), class: "btn btn-link" %></li>
            <li><%= link_to 'Delete', listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
