<div class="jumbotron">
  <h1>To find your dream house in Ireland.</h1>
  <h2>Have a look and enjoy yourself.</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.city %></h3>
            <p>Deposit:  â‚¬ <%= listing.deposit %></p>
            <p><%= "Landlord: #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

  <% if user_signed_in? %>
    <%= link_to new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
      <i class="glyphicon glyphicon-plus"></i> Add new house
    <% end %>
  <% end %>

