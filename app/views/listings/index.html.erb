          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.city %></h3>
            <p><%= listing.deposit %> â‚¬ </p>
            <%= link_to 'Edit', edit_listing_path(listing) , class: "btn btn-link" %>
